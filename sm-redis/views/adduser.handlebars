<h1>Add User</h1>

<form action="/user/add" class="container" method="POST" accept-charset="utf-8">
	<div class="form-group">
		<label>ID: <input type="text" name="id" class="form-control" placeholder="id"></label>
	</div>
	<div class="form-group">
		<label>First name: <input type="text" class="form-control" name="firstName" placeholder="first name"></label>
	</div>
		<div class="form-group">
		<label>Last name: <input type="text" class="form-control" name="lastName" placeholder="last name"></label>
	</div>
	<input type="submit" value="Save" class="btn btn-primary">
</form>

